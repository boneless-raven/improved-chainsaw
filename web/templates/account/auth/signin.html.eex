<h2>Sign In</h2>

<%= form_for @conn, auth_path(@conn, :login), [as: :login_credentials], fn f -> %>
  <%= form_group f, :username %>
  <%= form_group f, :password %>
  <%= if @next do %>
    <%= hidden_input f, :next, value: @next %>
  <%= end %>

  <div class="form-group">
    <%= submit "Submit", class: "btn btn-primary" %>
  </div>
<%= end %>

<%= link "Back", to: page_path(@conn, :index) %>
